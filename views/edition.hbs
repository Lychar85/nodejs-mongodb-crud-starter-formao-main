<div class="container">
    <div style="display: flex; flex-direction: center; justify-content: space-around; align-items:center; height: 1000px" class="row">
        <!-- PUT -->
        <div class="col-md-3">
            <h1>Modification</h1>
            <div class="card">
                <div class="card-body">
                    <form action="/{{_id}}?_method=PUT" method="POST">
                        <div class="form-group">
                            <div class="form-group">
                            <label><img src="{{this.image.path}}" alt="" style="max-width: 200px; margin-bottom:10px; border-radius:10px">Modifier l'image</label>
                            <input type="file" class="form-control" name="image">
                        </div>
                            <label>marque</label>
                            <input type="text" class="form-control" name="marque" value="{{marque}}">
                        </div>
                        <div class="form-group">
                            <label>modele</label>
                            <input type="text" class="form-control" name="modele" value="{{modele}}" >
                        </div>
                        <div class="form-group">
                            <label>price</label>
                            <input type="text" class="form-control" name="price" value="{{price}}">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect">Cat√©gories</label>
                            <select class="form-control" name="category" id="exampleFormControlSelect">
                                {{#each category}}
                                <option value="{{this._id}}">{{this.type}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Modifier</button>
                        <a href="/"><button type="button" class="btn btn-primary">Annuler</button></a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>